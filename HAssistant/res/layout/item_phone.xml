<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/dialog_phone_item_margin_bottom_right_left"
>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_phone_item_padding"
    
    android:background="@drawable/shape_frame_1"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/phoneName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="电话支持1"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_text_2" >
    </TextView>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="1234567"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/color_text_1" >
    </TextView>

</LinearLayout>
</RelativeLayout>